<div style="border-bottom-color: <%=  item.priority.color %>;"
            <% if item.completed? %> class="row item" <% else %>
            <% if item.priority.priority_level == 3 %> class="row item alert alert-success" <% end %>
            <% if item.priority.priority_level == 2 %> class="row item alert alert-warning" <% end %>
            <% if item.priority.priority_level == 1 %> class="row item alert alert-danger" <% end %>
            <% end %>
            >
  <div class="col-md-8">
    <h2 style="<%= 'opacity: 0.2;' if item.completed? %>" class="item-title" ><%= item.completed? ? sanitize("<del>#{ link_to(item.title, item) }</del>") : link_to(item.title, item)  %></h2>
    <p style="<%= 'opacity: 0.2;' if item.completed? %>" class="item-desc item-sub-title"><%= item.description %></p>

    <br><p style="opacity: 0.2;" class="time-ago"><%= item.completed? ? "Closed #{time_ago_in_words(item.completed_at)} ago" : "Created #{time_ago_in_words(item.created_at)} ago" %></p>
  </div>

  <div class="col-md-2">
    <% if item.completed? %>
        <p></p>
        <i style="opacity: 0.2;" class="fa fa-lg fa-check">Done</i>
    <% else %>
        <p><%= link_to complete_item_path(item), method: :patch do %></p>
              <i class="fa fa-lg fa-check">Done</i>
          <% end %>
    <% end %>
  </div>

  <div class="col-md-2">
    <p><%= link_to item, method: :delete, data: { confirm: 'Delete this task?' } do %></p>
          <i class="fa fa-lg fa-trash">Delete</i>
      <% end %>
      </div>
</div>


